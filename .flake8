[flake8]
# required by black
max-line-length = 88
ignore = E501, W503
# required by black
extend-ignore = E203
per-file-ignores = 
    __init__.py:F401 
exclude =
    .git
    __pycache__
    setup.py
    build
    dist
    releases
    .venv
    .tox
    .mypy_cache
    .pytest_cache
    .vscode
    .github
    poetry/utils/_compat.py
    poetry/utils/env_scripts/tags.py
    tests/fixtures/
    tests/repositories/fixtures/
    tests/utils/fixtures/
    tests
    docs/conf.py

docstring-convention = google